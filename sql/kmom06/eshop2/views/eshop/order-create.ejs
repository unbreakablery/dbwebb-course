<%- include("header", {title: title}); %>

<div class="container">
    <h1>Create new order</h1>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post">
                <div class="row mb-3">
                    <label for="customer_id" class="col-md-3 col-form-label text-right">Customer:</label>
                    <div class="col-md-9">
                        <select name="customer_id" id="customer_id" class="form-control">
                            <% for (const customer of customers) { %>
                                <option value="<%= customer.id %>"><%= customer.firstname %> <%= customer.lastname %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="" class="col-md-3 col-form-label text-right"></label>
                    <div class="col-md-9">
                        <button class="btn btn-primary">Create</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include("footer"); %>