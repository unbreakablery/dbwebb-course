<% res = res[0] %>
<%- include("header", {title: title}); %>

<div class="container">
    <h1>Edit Product details</h1>

    <p>This is details for product: <%= res.product_id %></p>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form method="post" action="/eshop/product/edit">
                <div class="row mb-3">
                    <label for="product_id" class="col-md-3 col-form-label text-right">Product ID:</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="product_id" name="product_id" maxlength="10" required placeholder="max 10 characters" value="<%= res.product_id %>">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="name" class="col-md-3 col-form-label text-right">Product Name:</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="name" name="name" value="<%= res.name %>" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="price" class="col-md-3 col-form-label text-right">Product Price:</label>
                    <div class="col-md-9">
                        <input type="number" class="form-control" id="price" name="price" value="<%= res.price %>" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="image_link" class="col-md-3 col-form-label text-right">Image Link:</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" id="image_link" name="image_link" value="<%= res.image_link %>" required placeholder="/img/eshop/my-product.jpg">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="description" class="col-md-3 col-form-label text-right">Description:</label>
                    <div class="col-md-9">
                        <textarea name="description" id="description" class="w-100" rows="5"><%= res.description %></textarea>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="" class="col-md-3 col-form-label text-right"></label>
                    <div class="col-md-9">
                        <button class="btn btn-primary">Edit</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include("footer"); %>