    <table class="table-category">
        <thead>
            <tr>
                <th class="w-100 text-center">Category</th>
            </tr>
        </thead>
        <tbody>
            <% for (const row of res) { %>
                <tr>
                    <td class="text-left"><%= row.category %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <p>
        <a href="/eshop/index">Index</a>
    </p>    
</div>

